<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Settings | AttenSys</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-slate-100 text-slate-800">

    <div class="min-h-screen flex flex-col">
        <header class="bg-white border-b p-4 shadow-sm">
            <div class="max-w-4xl mx-auto flex justify-between items-center">
                <h1 class="text-xl font-bold text-slate-900">Account Settings</h1>
                <a href="/dashboard/<%= user.role %>" class="text-indigo-600 hover:text-indigo-800 font-medium">&larr;
                    Back to Dashboard</a>
            </div>
        </header>

        <main class="flex-1 p-6">
            <div class="max-w-4xl mx-auto space-y-6">

                <% if (successMessage) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
                        role="alert">
                        <span class="block sm:inline">
                            <%= successMessage %>
                        </span>
                    </div>
                    <% } %>
                        <% if (errorMessage) { %>
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
                                role="alert">
                                <span class="block sm:inline">
                                    <%= errorMessage %>
                                </span>
                            </div>
                            <% } %>

                                <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
                                    <h2 class="text-lg font-semibold mb-4 border-b pb-2">Profile Information</h2>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-slate-600">Full Name</label>
                                            <p class="mt-1 text-slate-900 font-medium">
                                                <%= user.name %>
                                            </p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-slate-600">Email
                                                Address</label>
                                            <p class="mt-1 text-slate-900 font-medium">
                                                <%= user.email %>
                                            </p>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-slate-600">Role</label>
                                            <p class="mt-1 text-slate-900 font-medium capitalize">
                                                <%= user.role %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
                                    <h2 class="text-lg font-semibold mb-4 border-b pb-2">Change Password</h2>
                                    <form action="/settings/change-password" method="POST" class="space-y-4 max-w-md">
                                        <div>
                                            <label for="currentPassword"
                                                class="block text-sm font-medium text-slate-700">Current
                                                Password</label>
                                            <input type="password" name="currentPassword" required
                                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border p-2 focus:border-indigo-500 focus:ring-indigo-500">
                                        </div>
                                        <div>
                                            <label for="newPassword"
                                                class="block text-sm font-medium text-slate-700">New Password</label>
                                            <input type="password" name="newPassword" required
                                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border p-2 focus:border-indigo-500 focus:ring-indigo-500">
                                        </div>
                                        <div>
                                            <label for="confirmNewPassword"
                                                class="block text-sm font-medium text-slate-700">Confirm New
                                                Password</label>
                                            <input type="password" name="confirmNewPassword" required
                                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm border p-2 focus:border-indigo-500 focus:ring-indigo-500">
                                        </div>
                                        <button type="submit"
                                            class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition-colors">
                                            Update Password
                                        </button>
                                    </form>
                                </div>

                                <% if (user.role==='student' ) { %>
                                    <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
                                        <h2 class="text-lg font-semibold mb-4 border-b pb-2">Device Management</h2>
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <p class="text-sm text-slate-600 mb-2">
                                                    Your account is currently locked to a specific device for
                                                    attendance.
                                                </p>
                                                <div class="flex items-center space-x-2">
                                                    <span class="text-sm font-medium text-slate-700">Status:</span>
                                                    <% if (user.deviceId) { %>
                                                        <span
                                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                            Active & Locked
                                                        </span>
                                                        <% } else { %>
                                                            <span
                                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                                Not Linked
                                                            </span>
                                                            <% } %>
                                                </div>
                                            </div>
                                            <% if (user.deviceId) { %>
                                                <button onclick="openResetModal()"
                                                    class="bg-red-50 text-red-600 border border-red-200 px-4 py-2 rounded-md hover:bg-red-100 text-sm font-medium transition-colors">
                                                    Unlink Device
                                                </button>
                                                <% } %>
                                        </div>
                                    </div>
                                    <% } %>

            </div>
        </main>
    </div>

    <div id="reset-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-sm w-full p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Confirm Device Reset</h3>
            <p class="text-sm text-gray-600 mb-4">To unlink your device, please enter your current password.</p>

            <input type="password" id="reset-password" placeholder="Current Password"
                class="w-full border rounded-md p-2 mb-4 focus:ring-2 focus:ring-indigo-500 outline-none">

            <div id="reset-error" class="text-red-600 text-sm mb-3 hidden"></div>

            <div class="flex justify-end space-x-3">
                <button onclick="closeResetModal()"
                    class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-md">Cancel</button>
                <button onclick="confirmReset()"
                    class="px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-md">Unlink Device</button>
            </div>
        </div>
    </div>

    <script>
        const modal = document.getElementById('reset-modal');
        const passInput = document.getElementById('reset-password');
        const errorMsg = document.getElementById('reset-error');

        function openResetModal() {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeResetModal() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            passInput.value = '';
            errorMsg.classList.add('hidden');
        }

        async function confirmReset() {
            const password = passInput.value;
            if (!password) return;

            try {
                const response = await fetch('/settings/reset-device', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ passwordConfirm: password })
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    window.location.reload();
                } else {
                    errorMsg.textContent = result.message;
                    errorMsg.classList.remove('hidden');
                }
            } catch (err) {
                console.error(err);
                alert('An error occurred');
            }
        }
    </script>
</body>

</html>